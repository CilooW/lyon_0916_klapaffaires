{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid" id="img-header-video">
    <div class="container">
        <h1>Qui sommes <strong>nous</strong>?</h1>
        <a href="#"><button class="button-intern">Contactez-nous!</button></a>
    </div>
</div>
<!-- Introduction Remi & Christophe -->
<section class="container-fluid">
    <div class="container video-category">
        <h2>Un service, deux intervenants</h2>
        <hr />
        <h3><em>Avec leur compétences complémentaires, Rémi et Christophe vous proposent de vous démarquer efficacement</em></h3>
    </div>
</section>

<section class="container-fluid video-presentation">
    <div class="container">
    {% for employee in employees %}
        <div class="col-xs-12 col-sm-6 center-presentation">
            <h2>{{ employee.firstName }} {{ employee.lastName }}</h2>
            <hr />
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item video-youtube" src="{{ employee.videoUrl }}" allowfullscreen></iframe>
            </div>

            <br>
            {{ employee.videoDescription }}

        </div>
    {% endfor %}

    </div>

</section>

<section class="imgfix container-fluid" id="imgtransition">

    </div>
</section>

<!-- your accompagnment -->
