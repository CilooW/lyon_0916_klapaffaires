{% extends 'base.html.twig' %}

{% block body %}
    <h1>IntegrationVideo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ integrationVideo.id }}</td>
            </tr>
            <tr>
                <th>Iframe</th>
                <td>{{ integrationVideo.iframe }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ integrationVideo.description }}</td>
            </tr>
            <tr>
                <th>Adddate</th>
                <td>{% if integrationVideo.addDate %}{{ integrationVideo.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('integrationvideo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('integrationvideo_edit', { 'id': integrationVideo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
