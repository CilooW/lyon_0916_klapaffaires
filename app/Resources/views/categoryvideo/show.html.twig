{% extends 'base.html.twig' %}

{% block body %}
    <h1>CategoryVideo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categoryVideo.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ categoryVideo.category }}</td>
            </tr>
            <tr>
                <th>Shortdesc</th>
                <td>{{ categoryVideo.shortDesc }}</td>
            </tr>
            <tr>
                <th>Longdesc</th>
                <td>{{ categoryVideo.longDesc }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ categoryVideo.picture }}</td>
            </tr>
            <tr>
                <th>Categorytitle</th>
                <td>{{ categoryVideo.categoryTitle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categoryvideo_index') }}">Back to the list</a>
        </li>
